{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ES6"],
        "allowJs": true,
        "module": "commonjs",
        "strict": true,
        "rootDir": ".",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "noImplicitAny": false,
        "types": ["node","express"],
        "typeRoots": ["node_modules/@types","./src/types"],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
